<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:items="clr-namespace:MyWmp.Items"
    mc:Ignorable="d"
    x:Class="MyWmp.UC.MediaLayout">

    <Grid>
        <Label x:Name="MediaScreen" Style="{DynamicResource MediaScreen}" />
        <items:MediaPlaylistElement x:Name="Media" LoadedBehavior="Manual" />
    </Grid>
</UserControl>
