<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="TitleBrush">#143A61</SolidColorBrush>
    <SolidColorBrush x:Key="BgBrush">#222D38</SolidColorBrush>
    <SolidColorBrush x:Key="FgBrush">#2C3E50</SolidColorBrush>
    <SolidColorBrush x:Key="PressBrush">#34495E</SolidColorBrush>
    <SolidColorBrush x:Key="MediaScreenBgBrush">#222D38</SolidColorBrush>

    <Style x:Key="MainRoot" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="{DynamicResource BgBrush}" />
    </Style>

    <Style x:Key="ControlRoot" TargetType="{x:Type StackPanel}">
        <Setter Property="Background" Value="{DynamicResource BgBrush}" />
    </Style>
    
    <Style x:Key="MediaScreen" TargetType="Label">
        <Setter Property="Template" Value="{DynamicResource MediaScreenTemplate}" />
    </Style>
    
    <Style x:Key="Controls" TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template" Value="{DynamicResource ButtonTemplate}" />
    </Style>
</ResourceDictionary>