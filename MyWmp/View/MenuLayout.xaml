<UserControl x:Class="MyWmp.View.MenuLayout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewModel="clr-namespace:MyWmp.ViewModel"
             mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.DataContext>
        <viewModel:MenuViewModel />
    </UserControl.DataContext>

    <Menu x:Name="MenuRoot" VerticalAlignment="Top" HorizontalAlignment="Left">
        <MenuItem Header="_Media">
            <MenuItem Header="_Open" Click="MenuItem_OnClick" />
            <MenuItem Header="_Quit" Command="{Binding QuitCommand}" />
        </MenuItem>
        <MenuItem Header="_Playback">
        </MenuItem>
        <MenuItem Header="_Settings">
        </MenuItem>
    </Menu>
</UserControl>
