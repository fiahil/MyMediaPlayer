<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModel="clr-namespace:MyWmp.ViewModel"
	mc:Ignorable="d"
	x:Class="MyWmp.View.ControlLayout">

    <UserControl.DataContext>
        <viewModel:ControlViewModel/>
    </UserControl.DataContext>

    <StackPanel x:Name="ControlRoot" Height="50" VerticalAlignment="Bottom" Margin="0" Style="{DynamicResource ControlRoot}" Orientation="Horizontal" MinHeight="50" HorizontalAlignment="Center">
        <Button x:Name="PrevButton" Style="{DynamicResource Controls}" Content="/Resources/Prev.png" />
        <Button x:Name="PlayButton" Style="{DynamicResource Controls}" Content="{Binding Text}" Command="{Binding Play}" />
        <Button x:Name="StopButton" Style="{DynamicResource Controls}" Content="/Resources/Stop.png" />
        <Button x:Name="NextButton" Style="{DynamicResource Controls}" Content="/Resources/Next.png" />
        <Button x:Name="ShuffleButton" Style="{DynamicResource Controls}" Content="/Resources/Shuffle.png" />
        <Button x:Name="RepeatAllButton" Style="{DynamicResource Controls}" Content="/Resources/RepeatAll.png" />
        <Button x:Name="RepeatOneButton" Style="{DynamicResource Controls}" Content="/Resources/RepeatOne.png" />
    </StackPanel>
</UserControl>