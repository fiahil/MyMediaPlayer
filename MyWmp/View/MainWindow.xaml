<Window x:Class="MyWmp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:MyWmp.View"
 xmlns:viewModel="clr-namespace:MyWmp.ViewModel"
		MouseLeftButtonDown="OnMouseLeftButtonDown"
       
        Title="MyWMP" Height="350" Width="525" WindowStartupLocation="CenterScreen" Icon="/MyWmp;component/Resources/Icon.png" WindowStyle="None" WindowState="{Binding WindowStateNotifier}"  AllowsTransparency="True">
    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>
    <Grid x:Name="MainLayout" Style="{DynamicResource MainRoot}">
        <view:MediaLayout Margin="0,0,0,50"  MouseDoubleClick="OnFullScreenCommand"/>
        <view:ControlLayout />
    </Grid>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MyWmp;component/Themes/Default.xaml" />
                <ResourceDictionary Source="/MyWmp;component/Templates/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

</Window>