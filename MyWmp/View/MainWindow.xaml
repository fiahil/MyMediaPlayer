<Window x:Class="MyWmp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:MyWmp.View"
        xmlns:viewModel="clr-namespace:MyWmp.ViewModel"
		MouseLeftButtonDown="OnMouseLeftButtonDown"
        Title="MyWMP"
        Height="480"
        Width="854"
        WindowStartupLocation="CenterScreen"
        Icon="/MyWmp;component/Resources/Icon.png"
        WindowStyle="None"
        WindowState="{Binding WindowStateNotifier}"
        AllowsTransparency="True" MinWidth="380" MinHeight="90">
    
    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>
    
    <Grid x:Name="MainLayout" Style="{DynamicResource MainRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle Fill="{DynamicResource TitleBrush}" Grid.Row="0" Grid.ColumnSpan="4" />
       
        <Button Content="-" Grid.Column="1" Click="OnMinimizeButton_Click" />
        <Button Content="+" Grid.Column="2" Click="OnRestoreButton_Click" />
        <Button Content="X" Grid.Column="3" Click="OnCloseButton_Click" />
        <TabControl TabStripPlacement="Left" Grid.Row="1" Grid.ColumnSpan="4">
            <TabItem Header="Library">
                <view:LibraryLayout />
            </TabItem>
            <TabItem Header="Playback">
                <Grid>
                    <view:MediaLayout Margin="0,0,0,50"  MouseDoubleClick="OnFullScreenCommand"/>
                    <view:ControlLayout />
                </Grid>
            </TabItem>
        </TabControl>
        <view:MenuLayout/>
    </Grid>
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MyWmp;component/Themes/Default.xaml" />
                <ResourceDictionary Source="/MyWmp;component/Templates/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
</Window>