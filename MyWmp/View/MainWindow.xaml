<Window x:Class="MyWmp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:MyWmp.View"
        Title="MyWMP" Height="350" Width="525" WindowStartupLocation="CenterScreen" Icon="/MyWmp;component/Resources/Icon.png">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MyWmp;component/Themes/Default.xaml" />
                <ResourceDictionary Source="/MyWmp;component/Templates/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="MainLayout" Style="{DynamicResource MainRoot}">
        <view:MediaLayout Margin="0,0,0,50" />
        <view:ControlLayout />
        <!--<view:LibraryLayout></view:LibraryLayout>-->
    </Grid>
</Window>